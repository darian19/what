<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/widget_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/sliderPreferenceUnitPostfix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >
    </TextView>

    <TextView
        android:id="@+id/sliderPreferenceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sliderPreferenceUnitPostfix"
        android:gravity="right" >
    </TextView>

    <TextView
        android:id="@+id/sliderPreferenceUnitPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sliderPreferenceValue" >
    </TextView>

    <LinearLayout
        android:id="@+id/sliderPreferenceSliderContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sliderPreferenceUnitPostfix"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/sliderPreferenceSlider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>