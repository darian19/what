<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colors -->
    <color name="AnomalyChart.backgroundColor">#00FFFFFF</color>
    <color name="AnomalyChart.textColor">#A4A4A4</color>

    <dimen name="AnomalyChart.textSize">12sp</dimen>
    <dimen name="AnomalyChart.padding">0dp</dimen>
    <dimen name="AnomalyChart.labelHeight">24sp</dimen>
    <dimen name="AnomalyChart.margin">2dp</dimen>
    <dimen name="AnomalyChart.layoutHeight">24dp</dimen>
    <dimen name="AnomalyChart.flagHeight">16dp</dimen>
    <dimen name="AnomalyChart.flagMargin">-16dp</dimen>

    <!-- Styles -->
    <style name="AnomalyChart">
        <!-- The "paddingTop" and "layout_marginTop" attributes are used by the "flag" icon -->
        <item name="android:layout_marginTop">@dimen/AnomalyChart.flagMargin</item>
        <item name="android:paddingTop">@dimen/AnomalyChart.flagHeight</item>
        <item name="android:background">@color/AnomalyChart.backgroundColor</item>
        <item name="android:paddingLeft">@dimen/AnomalyChart.padding</item>
        <item name="android:paddingRight">@dimen/AnomalyChart.padding</item>
        <item name="flagDrawable">@drawable/flag_selector</item>
        <item name="barDrawable">@drawable/anomaly_bar_gradient</item>
        <item name="barLabelHeight">@dimen/AnomalyChart.labelHeight</item>
        <item name="barMarginRight">@dimen/AnomalyChart.margin</item>
        <item name="android:textColor">@color/AnomalyChart.textColor</item>
        <item name="android:textSize">@dimen/AnomalyChart.textSize</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/AnomalyChart.layoutHeight</item>
    </style>

</resources>
