<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colors -->
    <color name="InstanceDetail.Header.Background">#ffffff</color>
    <color name="InstanceDetail.Background">#C7CACA</color>
    <color name="InstanceDetail.MetricName.ShadowColor">#c7c7c7</color>

    <!-- Styles -->
    <style name="InstanceDetail" parent="@android:style/Theme">
        <item name="android:background">@color/InstanceDetail.Background</item>
    </style>

    <style name="InstanceDetail.Header" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">@color/InstanceDetail.Header.Background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="InstanceDetail.MetricList" parent="@android:style/Theme.Holo.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

</resources>