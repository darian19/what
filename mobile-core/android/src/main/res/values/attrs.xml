<resources>
    <declare-styleable name="LineChartView">
        <!--Label Style-->
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:shadowColor" />
        <attr name="android:shadowDx" />
        <attr name="android:shadowDy" />
        <attr name="android:shadowRadius"/>
        <!--Axis Style-->
        <attr name="axisThickness" format="dimension" />
        <attr name="axisColor" format="color" />
        <attr name="numberOfYLabels" format="integer" />
        <!--Line Style-->
        <attr name="dataThickness" format="dimension" />
        <attr name="dataColor" format="color" />
        <attr name="marker" format="reference" />
        <attr name="markerWidth" format="dimension" />
        <!--Anomaly Style-->
        <attr name="barDrawable" format="reference" />
        <attr name="barMarginLeft" format="dimension" />
        <attr name="barMarginRight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AnomalyChartView">
        <!--Anomaly Style-->
        <attr name="barDrawable" />
        <attr name="barMarginLeft" />
        <attr name="barMarginRight" />
        <attr name="emptyBarColor" format="color" />
        <attr name="flagDrawable" format="reference" />
        <attr name="barLabelHeight" format="dimension" />
        <!--Label Style-->
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:shadowColor" />
        <attr name="android:shadowDx" />
        <attr name="android:shadowDy" />
        <attr name="android:shadowRadius" />
    </declare-styleable>
</resources>
