# Run the YOMP tests and write the results into static/doublesecretprobation
# so we can read the results remotely.

YOMP_HOME=/opt/numenta/YOMP
SECRET_D="${YOMP_HOME}/static/doublesecretprobation"
TEST_RESULTS="${SECRET_D}/test_results.txt"
AMI_TEST_RESULTS="${SECRET_D}/ami_test_results.txt"

# We only need to run this once per boot
if [ -f "${TEST_RESULTS}" ];then
  exit 0
fi

logger -t YOMP "Writing YOMP py tests to file"

source /opt/numenta/bashrc
source /etc/YOMP/supervisord.vars

mkdir -p "${SECRET_D}"

cd "${YOMP_HOME}"
"${YOMP_HOME}/run_tests.sh" -l py > "${TEST_RESULTS}"
"${YOMP_HOME}/run_tests.sh" -l py --ami > "${AMI_TEST_RESULTS}"
