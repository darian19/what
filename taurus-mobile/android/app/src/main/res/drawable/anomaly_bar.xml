<level-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Green -->
    <item android:maxLevel="@integer/yellow_bar_floor_level">
        <layer-list>
            <item android:top="10dp">
                <shape>
                    <solid android:color="#FF0f8300" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Yellow -->
    <item android:maxLevel="@integer/red_bar_floor_level">
        <layer-list>
            <item android:top="5dp">
                <shape>
                    <solid android:color="#FFd6ce03" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Red -->
    <item android:maxLevel="10000">
        <layer-list>
            <item android:top="0dp">
                <shape>
                    <solid android:color="#FFcb0000" />
                </shape>
            </item>
        </layer-list>
    </item>

</level-list>
